<%- model_class = Visit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:visit_type) %>:</strong></dt>
  <dd><%= @visit.visit_type_humanize %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner) %>:</strong></dt>
  <dd><%= @visit.owner.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:realtor) %>:</strong></dt>
  <dd><%= @visit.realtor.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:visitor) %>:</strong></dt>
  <dd><%= @visit.visitor.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:key) %>:</strong></dt>
  <dd><%= @visit.key.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:observation) %>:</strong></dt>
  <dd><%= @visit.observation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_at) %>:</strong></dt>
  <dd><%= I18n.l(@visit.start_at, format: :default) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:finished_at) %>:</strong></dt>
  <dd><%= ldate(@visit.finished_at, format: :default) %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
            root_path(tab: 'visit'), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_visit_path(@visit), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            visit_path(@visit),
            :method => 'delete',
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-danger' %>
