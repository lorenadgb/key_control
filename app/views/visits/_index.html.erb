<%- model_class = Visit -%>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:date) %></th>
    <th><%= model_class.human_attribute_name(:owner) %></th>
    <th><%= model_class.human_attribute_name(:visitor) %></th>
    <th><%= model_class.human_attribute_name(:key) %></th>
    <th><%= model_class.human_attribute_name(:observation) %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @visits.each do |visit| %>
      <tr>
        <td><%= link_to visit.id, visit_path(visit) %></td>
        <td><%= visit.date %></td>
        <td><%= visit.owner.name %></td>
        <td><%= visit.visitor.name %></td>
        <td><%= visit.key.code %></td>
        <td><%= visit.observation %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_visit_path(visit), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      visit_path(visit),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @visits, params: {active_tab: 'visits'} %>
</br>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_visit_path,
            :class => 'btn btn-primary' %>
