<div class='nested-fields'>
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <%= f.input :code, collection: [''] %>
      </div>

      <div class="col-xs-5 col-sm-offset-1">
        <%= f.input :observation %>
      </div>
      </br>
      <div class="col-xs-1">
        <%= link_to_remove_association 'Remover chave', f, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>

<script>
  $('#building_address_attributes_cep').mask('00000-000');

  $("#building_person_id").select2({
    theme: 'bootstrap'
  });

  var url = '/update_keys?source=' + $('#building_source').val();
  var listitems = [];

  $.get(url, function(data) {
    data.forEach(function(code){
      listitems += '<option value="' + code + '">' + code + '</option>';
    });

    $.each($("[id^=building_keys_attributes_][id$=_code]"), function () {
      $(this).append(listitems);
    });
  });

  $.each($("[id^=building_keys_attributes_][id$=_code]"), function () {
    $(this).select2({
      theme: 'bootstrap'
    });
  });
</script>
